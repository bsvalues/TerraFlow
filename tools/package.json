{
  "name": "terrafusion-performance-tools",
  "version": "1.0.0",
  "description": "Performance testing tools for TerraFusion",
  "main": "performance_audit.js",
  "scripts": {
    "audit": "node performance_audit.js",
    "analyze-js": "webpack-bundle-analyzer ../static/js/stats.json",
