  },
  "dependencies": {
    "lighthouse": "^9.6.8",
    "puppeteer": "^19.7.2"
  },
  "devDependencies": {
    "cssstats": "^4.0.0",
    "webpack-bundle-analyzer": "^4.7.0"
  }
}